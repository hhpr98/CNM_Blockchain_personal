@model BlockChainDemo.Models.User

@{
    ViewBag.Title = "Đăng nhập";
}
<h2>@ViewBag.Title</h2>

@if (ViewBag.Acc != "")
{
    <p style="color:red;">Bạn đã đăng nhập!</p>
    using (@Html.BeginForm("Logout", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Đăng xuất</button>
    }
}
else
{
    using (@Html.BeginForm("CheckLogin", "Home", FormMethod.Post))
    {
        <!-- Ref : https://hoanguyenit.com/aspnet-mvc5-login-and-register.html -->

        @Html.AntiForgeryToken()

        <h5 style="color:red;">@ViewBag.status</h5>
        <div class="form-group">
            <label for="exampleInputEmail1">Tên đăng nhập</label>
            <!--<input type="text" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Tên đăng nhập">-->
            @Html.TextBoxFor(s => s.username, "", new { @type = "text", @class = "form-control", @placeholder = "Tên đăng nhập" })
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Mật khẩu</label>
            <!--<input type="password" class="form-control" id="password" placeholder="Mật khẩu">-->
            @Html.TextBoxFor(s => s.password, "", new { @type = "password", @class = "form-control", @placeholder = "Tên đăng nhập" })
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Nhớ tên đăng nhập</label>
        </div>
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
    }
}

